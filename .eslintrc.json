/*This eslint uses eslint-plugin-angular recommended by John Papa */
/*Reference: https://github.com/Gillespie59/eslint-plugin-angular*/

{
  "root": true,
  "plugins": [
    "angular"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:angular/johnpapa"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "amd": true,
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "rules": {
    "no-console": 0,
    "no-use-before-define": 0
  }
}
